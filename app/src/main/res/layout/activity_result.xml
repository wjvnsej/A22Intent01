        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="fill"
        android:gravity="left|center_horizontal"/>
    <RatingBar
        android:id="@+id/rb4"
        android:numStars="5"
        android:stepSize="1"
        android:paddingTop="5dp"
        android:layout_height="50dp"
        android:layout_gravity="fill"/>

    <TextView
        android:id="@+id/tv5"
